<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_registration"
    app:startDestination="@id/fragmentSignIn">

    <fragment
        android:id="@+id/fragmentSignIn"
        tools:layout="@layout/fragment_sign_in"
        android:name="soft.mahmod.yourreceipt.view_fragment.registration.FragmentSignIn"
        android:label="Sign In" >
        <action
            android:id="@+id/action_fragmentSignIn_to_fragmentSignUp"
            app:destination="@id/fragmentSignUp"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/fragmentInfo"
        android:name="soft.mahmod.yourreceipt.view_fragment.registration.FragmentInfo"
        android:label="More Info"
        tools:layout="@layout/fragment_info" >
        <argument
            android:name="user_args"
            app:argType="soft.mahmod.yourreceipt.model.User"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/fragmentSignUp"
        android:name="soft.mahmod.yourreceipt.view_fragment.registration.FragmentSignUp"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_fragmentSignUp_to_fragmentSignIn"
            app:destination="@id/fragmentSignIn"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/action_fragmentSignUp_to_fragmentInfo2"
            app:destination="@id/fragmentInfo" />
    </fragment>
</navigation>