<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="checked"
            type="Boolean" />

        <variable
            name="hasItem"
            type="Boolean" />

        <variable
            name="time"
            type="String" />

        <variable
            name="date"
            type="String" />

        <variable
            name="totalAll"
            type="String" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_page"
        tools:context=".view_fragment.add_receipt.FragmentAddReceipt">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="@dimen/_3sdp"
            app:cardUseCompatPadding="true"
            android:backgroundTint="@color/top_and_bottom_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_down"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    app:tint="@color/text_btn_color"
                    android:src="@drawable/ic_baseline_check_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView3"
                    app:layout_constraintHorizontal_bias="0.120"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/receipt"
                    android:textColor="@color/text_btn_color"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_weight="1"
                    app:tint="@color/text_btn_color"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.880"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{time}"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{date}"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="italic" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewProducts"
                    android:backgroundTint="@color/top_and_bottom_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardUseCompatPadding="true">
                    <ImageView
                        android:id="@+id/btn_camera"
                        android:layout_width="@dimen/_25sdp"
                        android:src="@drawable/ic_outline_camera_alt_24"
                        android:layout_gravity="end|center"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        app:tint="@color/text_btn_color"
                        android:layout_height="@dimen/_25sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:text='@string/products'
                        android:textColor="@color/text_btn_color"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="italic" />


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/linear_add_itcl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="?actionBarSize"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/create_item"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?selectableItemBackground"
                                android:drawableStart="@drawable/ic_baseline_add_24"
                                android:drawablePadding="@dimen/_8sdp"
                                android:drawableTint="@color/top_and_bottom_color"
                                android:gravity="center"
                                android:paddingHorizontal="@dimen/_8sdp"
                                android:text="@string/create_item"
                                android:textColor="@color/hint_color"
                                android:textSize="@dimen/_16ssp"
                                android:textStyle="italic" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/add1_item"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?selectableItemBackground"
                                android:drawableStart="@drawable/ic_baseline_format_list_bulleted_24"
                                android:drawablePadding="@dimen/_8sdp"
                                android:drawableTint="@color/top_and_bottom_color"
                                android:gravity="center"
                                android:paddingHorizontal="@dimen/_8sdp"
                                android:text="@string/add_item"
                                android:textColor="@color/hint_color"
                                android:textSize="@dimen/_16ssp"
                                android:textStyle="italic" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/liner_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/txt_visible_rec"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/hide"
                            android:textColor="@color/top_and_bottom_color"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:id="@+id/txt_delete_rec"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/delete"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="@dimen/_14ssp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout12">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:text="@string/name"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="italic"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:text="@string/quantity"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="italic"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:text="@string/price"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="italic"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:text="@string/total"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="italic"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/items_rec"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:visibility='@{hasItem?View.VISIBLE:View.GONE,default = visible}'
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViedwProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/top_and_bottom_color"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:text='@string/client'
                        android:textColor="@color/text_btn_color"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="italic" />


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/create_client"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_baseline_add_24"
                        android:drawableTint="@color/top_and_bottom_color"
                        android:fitsSystemWindows="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:text="@string/create_client"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="italic" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/add_client"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:drawableStart="@drawable/ic_baseline_format_list_bulleted_24"
                        android:drawableTint="@color/top_and_bottom_color"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:text="@string/add_client"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="italic" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_client_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:textColorHint="@color/hint_color"
                    android:background="@drawable/custom_stork"
                    android:hint="@string/client_name"
                    android:textColor="@color/text_color"
                    android:inputType="textPersonName"
                    android:padding="@dimen/_12sdp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_client_phone"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@drawable/custom_stork"
                    android:hint="@string/client_phone"
                    android:inputType="numberDecimal"
                    android:padding="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/top_and_bottom_color"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:text="@string/receipt"
                        android:textColor="@color/text_btn_color"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="italic" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/layout_client_side"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:background="@drawable/custom_stork"
                        android:hint="@string/subject"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/hint_color"
                        android:inputType="text"
                        android:padding="@dimen/_12sdp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:background="@drawable/custom_stork"
                        android:hint="@string/discount"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/hint_color"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/_12sdp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_total_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:textColor="@color/text_color"
                        android:background="@drawable/custom_stork"
                        android:hint="@string/total_all"
                        android:textColorHint="@color/hint_color"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/_12sdp"
                        android:text="@{totalAll}" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:textColorHint="@color/hint_color"
                        android:background="@drawable/custom_stork"
                        android:hint="@string/note"
                        android:textColor="@color/text_color"
                        android:padding="@dimen/_12sdp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchMaterial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginVertical="@dimen/_12sdp"
                        android:text="@string/type_receipt"
                        android:textColorHint="@color/hint_color"
                        android:textColor="@color/text_color"
                        android:textOff="@string/take"
                        android:textOn="@string/dues"
                        android:textSize="@dimen/_12ssp"
                        app:showText="true" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/top_and_bottom_color"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:text="@string/print"
                        android:textColor="@color/text_btn_color"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="italic" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/linear_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_print"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="@string/print"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12ssp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:text="@string/add_logo"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12ssp"
                        android:visibility='@{checked ? View.VISIBLE:View.GONE , default=gone}' />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>