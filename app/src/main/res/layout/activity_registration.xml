<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="hasReg"
            type="Boolean" />
        <variable
            name="name"
            type="String" />
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:visibility='@{hasReg?View.GONE:View.VISIBLE,default = visible}'
        android:layout_height="match_parent"
        android:background="@color/background_page"
        tools:context=".view_activity.ActivityRegistration">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            app:title="@{name}"
            app:menu="@menu/menu_toolbar_registration_activity"
            app:titleTextColor="@color/text_btn_color"
            android:layout_height="?actionBarSize"
            android:background="@color/top_and_bottom_color"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintHorizontal_bias="0.5"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toTopOf="parent">
        </com.google.android.material.appbar.MaterialToolbar>

        <fragment
            android:id="@+id/nav_reg"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            app:navGraph="@navigation/nav_registration" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>