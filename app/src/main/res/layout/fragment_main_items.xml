<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="emptyTextSearch"
            type="Boolean" />
        <variable
            name="inDialog"
            type="Boolean" />
        <variable
            name="isCreateReceipt"
            type="Boolean" />


        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_page"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="@dimen/_32sdp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/top_and_bottom_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_my_items"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:drawablePadding="@dimen/_8sdp"
                android:gravity="center"
                android:text='@string/add_item'
                android:textColor="@color/text_btn_color"
                android:textSize="@dimen/_13sdp"
                android:visibility='@{inDialog?View.VISIBLE:View.GONE,default=visible}'
                app:drawableEndCompat="@drawable/ic_baseline_format_list_bulleted_24"
                app:drawableTint="@color/text_btn_color"
                app:layout_constraintBottom_toBottomOf="@+id/btn_slide"
                app:layout_constraintEnd_toStartOf="@+id/btn_slide"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_slide" />

            <ImageView
                android:id="@+id/btn_slide"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="?actionBarSize"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_baseline_arrow_drop_up_24"
                android:visibility='@{inDialog?View.VISIBLE:View.GONE,default=visible}'
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/text_btn_color" />

            <LinearLayout
                android:id="@+id/linearLayout13"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_slide">

                <ImageView
                    android:id="@+id/btn_clean"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="0"
                    android:visibility='@{emptyTextSearch?View.VISIBLE:View.GONE,default=gone}'
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_baseline_close_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/text_btn_color" />

                <EditText
                    android:id="@+id/text_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:autofillHints="name"
                    android:hint="@string/text_some_things"
                    android:inputType="text"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:textColor="@color/text_btn_color"
                    android:textColorHint="@color/item_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_delete"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinner_sort_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility='@{emptyTextSearch?View.GONE:View.VISIBLE,default=visible}'
                    android:backgroundTint="@color/icon_color"
                    android:gravity="start" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:shadowColor="@color/white"
            android:shadowRadius="0"
            android:src="@drawable/ic_baseline_add_24"
            android:text="@string/add_item"
            android:textColor="@color/text_color"
            app:icon="@drawable/ic_baseline_add_24"
            app:iconSize="@dimen/_12sdp"
            app:iconTint="@color/icon_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutHeader"
            app:tint="@color/icon_color" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_items_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_add" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>